<div class="col-lg-12">
	<div class="card mt-5 mb-5">
		<div class="card-body">
			<h1 class="text-center"> Show Product </h1>
			<div class="row mt-3 mb-3">
				<div col-lg-6>
					<p class="lead"><strong>Name:</strong><%= @product.name %></p>
				</div>
			</div>

			<div class="row mt-3 mb-3">
				<div col-lg-6>
					<p class="lead"><strong>Price:</strong><%= @product.price %></p>
				</div>
			</div>

			<div class="row mt-3 mb-3">
				<div col-lg-6>
					<p class="lead"><strong>Description:</strong><%= @product.description %></p>
				</div>
			</div>

			<%= link_to "Edit", edit_product_detail_path(@product), class:"btn btn-primary btn-lg"%>
			<%= link_to "Back to Product", product_details_path, class:"btn btn-outline-primary btn-lg" %>

		</div>
	</div>



</div>