<div class="col-lg-12">
	<div class="card mt-5 mb-5">
		<div class="card-body">
			<h1 class="text-center">Product Listing</h1>
		</div>
	</div>

	<%= link_to "Create Product", new_product_detail_path, class:"btn btn-primary btn-lg rounded-0" %>
	<table class="table table-boarder">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>Action</th>

			</tr>
		</thead>

		<tbody>
			<% @product.each do |product|%>
			<tr>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.description %></td>
				<td><%= link_to "Edit", edit_product_detail_path(product), class:"btn btn-primary " %>
					<%= link_to "view", product_detail_path(product), class:"btn btn-primary" %>
					<%= link_to "Delete", product_detail_path(product), class:"btn btn-danger", method: :delete, data: {confirm:"Are You sure to delete product"} %>
				</td>
			</tr>
			<% end %>

		</tbody>
	</table>
</div>